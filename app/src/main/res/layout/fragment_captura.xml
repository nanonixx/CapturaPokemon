    <Button
        android:id="@+id/Calcular"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="Calcular" />
    <TextView
        android:id="@+id/cuota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
